<div class="ploneintranet author maxiauthor"
     tal:condition="view/data">

  <div class="portrait">
    <a tal:attributes="href view/author_url"
       tal:content="structure view/portrait" />
  </div>

  <div class="personal-info" i18n:domain="ploneintranet">

    <h1 class="username">
      <a tal:attributes="href view/author_url"
         tal:content="view/data/fullname">user name</a>
    </h1>

    <div class="ploneintranet network navigation">
      <ul>
        <li class="updates">
          <a tal:attributes="href view/author_url">
            <span class="count"> </span>
            <span class="option" i18n:translate="">Updates</span>
          </a>
        </li>
        <li class="followers">
          <a tal:attributes="href view/followers_url">
            <span class="count"
                  tal:content="view/followers_count">21</span>
            <span class="option" i18n:translate="">Followers</span>
          </a>
        </li>
        <li class="following">
          <a tal:attributes="href view/following_url">
            <span class="count"
                  tal:content="view/following_count">33</span>
            <span class="option" i18n:translate="">Following</span>
          </a>
        </li>
      </ul>
    </div>

    <div class="userid">
      <a tal:attributes="href view/author_url"
         tal:content="string: @${view/userid}">@who</a>
    </div>

    <div class="bio"
         tal:content="view/data/description">bio
    </div>

    <div>
      <span class="location"
            tal:condition="view/data/location"
            tal:content="view/data/location">location</span>
      <a class="home_page"
            tal:condition="view/data/home_page"
            tal:attributes="href view/data/home_page"
            tal:content="view/data/home_page">url</a>
    </div>

    <div class="subunsub" tal:condition="view/show_subunsub">
      <form method="post">
        <input type="hidden" name="userid"
               tal:attributes="value view/userid" />
        <input tal:condition="not:view/is_following"
               type="submit" name="subunsub_follow"
               i18n:attributes="value"
               value="follow" />
        <span tal:condition="view/is_following"
              class="following" i18n:translate="">
          Following
        </span>
        <input tal:condition="view/is_following"
               type="submit" name="subunsub_unfollow"
               i18n:attributes="value"
               value="unfollow" />
      </form>
    </div>
  </div><!-- /info -->
</div><!-- /author -->
