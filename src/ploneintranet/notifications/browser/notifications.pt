<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="here/main_template/macros/master"
      i18n:domain="plone">
<body>
  <div id="social-messages"
    metal:fill-slot="main">
      <h1>
              Notifications
      </h1>

      <!--
      {'actors': [{'fullname': 'Maarten Kling', 'userid': 'maarten', 'email': 'join@test.com'}],
      'predicate': 'GLOBAL_NOTICE',
      'obj': {
        'url': 'Plone',
        'message_last_modification_date': datetime.datetime(2014, 11, 26, 11, 32, 49, 409000),
        'read': False,
        'id': 'Plone',
        'title': 'dfsasdfa'}
      }
      -->

      <div id="notifications" tal:define="notifications view/your_notifications">
        <ul class="notifications">
          <li tal:repeat="notification notifications">

            <!-- todo no python in tal -->
            <a tal:condition="python: len(notification.actors) > 0" href="#" class="image" tal:attributes="href python:notification.actors[0]['userid']">
              <!-- todo getuserportrait here -->
              <img class="avatar" src="defaultUser.png" alt="" tal:attributes="src python:portal_url + '/portal_memberdata/portraits/' + notification.actors[0]['userid']">
            </a>

            <span class="subjects">
                    <a tal:repeat="actor notification/actors" tal:content="actor/fullname|nothing" href="" tal:attributes="href notification/obj/url" class="subject">Jon Doe</a>
            </span>
            <span class="verb" tal:content="notification/predicate">
                    asked
            </span>
            <a href="" class="object" tal:content="notification/obj/title">
                    Who's up for a beer at Watershed at 8pm?
            </a>
            <time class="datestamp" datetime="2008-02-14" title="5 October 2015, 18:43" tal:content="notification/obj/message_last_modification_date">Just now</time>
          </li>
        </ul>
        <div tal:condition="not: notifications">No pending notifications</div>

        <p class="all-notifications">
          <a tal:attributes="href string:${portal_url}/notifications">All notifications</a>
        </p>
      </div>

    </div>
  </body>
</html>
