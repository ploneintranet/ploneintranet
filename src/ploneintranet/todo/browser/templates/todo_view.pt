<html xmlns="http://www.w3.org/1999/xhtml" xml:lang="en"
      xmlns:tal="http://xml.zope.org/namespaces/tal"
      xmlns:metal="http://xml.zope.org/namespaces/metal"
      xmlns:i18n="http://xml.zope.org/namespaces/i18n"
      lang="en"
      metal:use-macro="context/main_template/macros/master"
      i18n:domain="ploneintranet">

  <body>
    <metal:content fill-slot="content"
                   tal:define="
                     workspace python:view.workspace;
                     workspace_url workspace/absolute_url;
                     workspace_id python:workspace.id;
                     read_only python:not view.can_edit;
                     disabled python: None if view.can_edit else 'disabled';
                     workflow_menu nocall:here/@@workflow_menu|nothing;
                   ">
      <div class="application" id="app-space">
        <div class="sidebar-normal application-workspace application- project page-type-${type} workspace-type-${type} sidebar-left-closed sidebar-right-closed"
             id="application-body"
             tal:define="type workspace/ws_type | string:workspace;"
        >
          <h1 id="workspace-name">
            <a href="${workspace_url}">${workspace/Title}</a>
          </h1>

          <div class="${workspace_id}" id="project-body">

            <div id="document-body">
              <form class="document pat-inject" method="POST" action="${context/absolute_url}/view"
                data-pat-inject="source: #document-content; target: #document-content &amp;&amp; source: #global-statusmessage; target: #global-statusmessage;">
                <div class="metadata pat-bumper" id="meta">
                  <div class="meta-bar">
                    <span class="title-group">
                      <h1 class="doc-title"
                          id="document-title"
                          style="min-height: 1.5em"
                        >${context/title}</h1>
                      <textarea name="title"
                                disabled="${disabled}"
                                placeholder="Document title"
                                class="doc-title pat-content-mirror"
                                data-pat-content-mirror="target: #document-title"
                      >${context/title}</textarea>
                    </span>
                    <div class="quick-functions">
                      <a tal:condition="not: read_only"
                         href="${context/absolute_url}/delete_confirmation#content"
                         class="pat-modal icon-trash iconified"
                         title="Delete this document"
                         data-pat-inject="source: #content"
                         i18n:attributes="title"
                         i18n:translate=""
                      >Delete</a>
                      <!--a href="" class="icon-copy iconified" title="Copy this document" i18n:attributes="title" i18n:translate="">
                        Copy
                      </a>
                      <a href="#share-panel" class="icon-export iconified pat-modal" title="Share this document" i18n:attributes="title" i18n:translate="">
                        Share
                      </a-->
                      <tal:bookmark replace="structure here/@@bookmark-link-iconified|nothing" />
                      <tal:history tal:condition="exists:here/@@app-audit-button">
                        <a tal:replace="structure here/@@app-audit-button" />
                      </tal:history>
                      <a class="icon-info-circle meta-data-toggle iconified" title="Show extra metadata fields" i18n:attributes="title" i18n:translate="">
                        Toggle extra metadata
                      </a>
                      <tal:workflow replace="structure workflow_menu|nothing" />
                      <button type="submit" tal:condition="not:read_only" class="icon-floppy" i18n:translate="">Save</button>

                    </div>
                  </div>
                  <fieldset class="pat-collapsible closed meta-extra" data-pat-collapsible="trigger: .meta-data-toggle" id="meta-extra">
                    <fieldset class="bar">
                      <input type="text"
                             disabled="${disabled}"
                             class="pat-autosuggest"
                             name="subjects"
                             placeholder="Tags"
                             i18n:domain="plone"
                             i18n:attributes="placeholder"
                             value="${python:','.join(context.subject)}"
                             data-pat-autosuggest="ajax-data-type: json; ajax-search-index: text; ajax-search-index: text; ajax-url:${context/absolute_url}/@@getVocabulary?resultsonly=1&amp;name=ploneintranet.network.vocabularies.Keywords&amp;field=subjects"
                      />
                    </fieldset>

                  </fieldset>
                </div>

                <div id="document-content">
                  <div class="document ticket-details">

                    <fieldset class="vertical fancy">
                      <metal:task_fields use-macro="workspace/content_macros/task_fields"/>
                    </fieldset>
                  </div>
                </div>
                <input type="hidden" name="form.submitted" value="1" />
              </form>
              <div tal:replace="structure context/@@content-stream.html"></div>
            </div>

            <aside data-tile="${workspace_url}/@@sidebar.default"
                   tal:condition="view/show_sidebar"></aside>
            <aside tal:condition="not:view/show_sidebar"
                   tal:define="
                     done workflow_menu/is_done;
                   "
              >
              <label id="todo-${here/UID}-replacement"
                     tal:condition="request/task_action|nothing"
              >
                <input type="checkbox" name="active-tasks:list"
                  value="${here/UID};"
                  checked="${python: 'checked' if done else None}"
                  disabled="${disabled}"
                />
                <input type="hidden"
                  name="disabled-checked-tasks:list"
                  value="${here/UID}"
                  tal:condition="python: disabled and done"
                />
                <input type="hidden"
                  name="checked-tasks:list"
                  value="${here/UID}"
                  tal:condition="python: not disabled and done"
                />
                <a class="pat-inject follow pat-switch"
                  title="${here/title}"
                  href="${here/absolute_url}"
                  data-pat-inject="source: #document-body; target: #document-body"
                  data-pat-switch="body focus-* focus-document &amp;&amp; body sidebar-large sidebar-normal"
                  >${here/title}</a>
                <input type="hidden"
                  name="current-tasks:list"
                  value="${here/UID}"
                />
              </label>
            </aside>
          </div>
          <nav class="navigation workspace-tabs"
               id="workspace-tabs"
               data-tile="${workspace_url}/@@workspace.tabs.tile"
          />
        </div>
      </div>
    </metal:content>
  </body>
</html>
