<div class="modal"
     id="content"
     i18n:domain="ploneintranet"
>
  <div class="pat-modal"
       id="document-content"
  >
    <h1 i18n:translate="">
      Create event
    </h1>
    <form method="POST"
          action="${request/URL}"
          class="wizard-box ${python:'pat-inject' if dpi else ''} pat-validation"
          data-pat-inject="${dpi}"
          data-pat-validation="disable-selector:#form-buttons-create-${view/form_timestamp}"
          tal:define="dpi view/data_pat_inject;"
    >
      <div class="panel-body">

        <fieldset class="vertical"
                  tal:define="workspace here/content_helper_view/safe_get_workspace;
                              workspace_url workspace/absolute_url">
          <label>
            <input name="title" placeholder="Event title" type="text" maxlength="70" required="required" class="required" i18n:attributes="placeholder" placeholder="Event title" autofocus="autofocus"/>
          </label>
          <br/>
          <metal:task_fields use-macro="context/content_macros/event_fields"/>
        </fieldset>

      </div>
      <div class="buttons panel-footer">
        <span tal:replace="structure context/@@authenticator/authenticator"/>
        <button id="form-buttons-create-${view/form_timestamp}" name="form.buttons.create" type="submit" value="Create" class="icon-ok-circle focus close-panel" i18n:translate="" i18n:domain="plone" disabled="disabled">
          Create event
        </button>
        <button id="form-buttons-cancel" name="form.buttons.cancel" type="button" value="Cancel" class="icon-cancel-circle close-panel validate-ignore" i18n:translate="" i18n:domain="plone">
          Cancel
        </button>
      </div>
      <input type="hidden" name="portal_type" value="Event"/>
    </form>
  </div>
</div>
