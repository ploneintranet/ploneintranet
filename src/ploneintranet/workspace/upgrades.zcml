<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="ploneintranet.workspace">

    <genericsetup:upgradeStep
        title="Customize file and image widgets"
        description="To allow images and files to be replaced"
        source="*"
        destination="0003"
        handler=".upgrades.import_portal_types"
        profile="ploneintranet.workspace:default" />

    <genericsetup:upgradeStep
        title="Reset empty tags"
        description="Empty tags were saved as (u'',) rather than ()"
        source="*"
        destination="0004"
        handler=".upgrades.reset_empty_tags"
        profile="ploneintranet.workspace:default" />

    <genericsetup:upgradeStep
        title="Reload registry"
        description="Adding review_state to the ploneintranet.search.filter_fields"
        source="*"
        destination="0005"
        handler=".upgrades.reload_registry"
        profile="ploneintranet.workspace:default" />

</configure>
