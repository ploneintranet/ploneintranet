<configure
    xmlns="http://namespaces.zope.org/zope"
    xmlns:browser="http://namespaces.zope.org/browser"
    xmlns:cmf="http://namespaces.zope.org/cmf"
    xmlns:five="http://namespaces.zope.org/five"
    xmlns:plone="http://namespaces.plone.org/plone"
    xmlns:i18n="http://namespaces.zope.org/i18n"
    xmlns:genericsetup="http://namespaces.zope.org/genericsetup"
    i18n_domain="ploneintranet.theme">

    <!-- Zope2 initialization -->
    <five:registerPackage package="." initialize=".initialize" />

    <!-- Include configuration for dependencies listed in setup.py -->
    <includeDependencies package="." />

    <!-- A custom permission allowing us to restrict
         certain views to logged in users -->
    <permission
        id="ploneintranet.viewsite"
        title="Plone Intranet: View Site"
        />

    <include package=".browser" />
    <include package=".content" />

    <!-- Register the installation GenericSetup extension profile -->
    <genericsetup:registerProfile
        name="default"
        title="Plone Intranet: -- [Theme]"
        directory="profiles/default"
        description="Extension profile for ploneintranet.theme."
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />

    <genericsetup:registerProfile
        name="uninstall"
        title="Plone Intranet: -- [Theme uninstall]"
        directory="profiles/uninstall"
        description="Extension profile for ploneintranet.theme."
        provides="Products.GenericSetup.interfaces.EXTENSION"
        />

    <genericsetup:importStep
        name="ploneintranet.theme.configureFrontPage"
        title="Delete default frontpage and configure dashboard as default"
        description=""
        handler="ploneintranet.theme.setuphandlers.configureFrontPage">
    </genericsetup:importStep>

    <genericsetup:importStep
        name="ploneintranet.theme.uninstall"
        title="Plone Intranet Theme: uninstall steps"
        description="Various uninstall steps that are not handled by GS import/export handlers."
        handler="ploneintranet.theme.uninstall.uninstall" />

    <plone:static
        directory="static"
        type="theme"
        name="ploneintranet.theme"
        />
    <include package="z3c.jbot" file="meta.zcml" />
    <interface name="ploneintranet.theme"
        interface="ploneintranet.theme.interfaces.IThemeSpecific"
        type="zope.publisher.interfaces.browser.IBrowserSkinType"
        />
    <browser:jbot directory="static/overrides"
        layer=".interfaces.IThemeSpecific" />

    <adapter factory=".widgets.PatDatePickerConverter" />
    <adapter factory=".widgets.StartPatDatePickerFieldWidget" />
    <adapter factory=".widgets.EndPatDatePickerFieldWidget" />

</configure>
