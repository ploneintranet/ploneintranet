            xmlns:metal="http://xml.zope.org/namespaces/metal"
            xmlns:i18n="http://xml.zope.org/namespaces/i18n"
            lang="en"
            metal:use-macro="context/main_template/macros/master"
            i18n:domain="ploneintranet.theme">

    <body class="view-secure">
        <metal:content fill-slot="content">

            <div class="row">
                <div class="four columns">
                    <div class="item portlets">

                        <!--div id="portlet-news" data-tile="./@@news.tile"></div-->

                        <div id="portlet-workspaces" data-tile="./@@workspaces.tile"></div>

                        <!--div id="portlet-tasks" data-tile="./@@tasks.tile"></div-->

                    </div>
                </div>
                <div class="eight columns">
                    <form data-tile="./@@newpostbox.tile"></form>
                    <div data-tile="./@@activitystream.tile?network=1"></div>
                </div>
            </div>

        </metal:content>
    </body>
</html>
